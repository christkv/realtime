      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>
    <link href="/css/bootstrap-responsive.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/application.css"/>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Realtime&#8482;</a>
          <div class="nav-collapse collapse">
            <p class="navbar-text pull-right">
              Logged in as <a href="#" class="navbar-link">Username</a>
            </p>
            <ul class="nav">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Subscribed</li>
              <li>
                <a href="#">
                  <img src="/img/knobs/Knob%20Green.png" width="15" height="15"/>
                  <img src="/img/os/linux.png" width="15" height="15"/>
                  192.168.0.1
                </a>
              </li>
              <li>
                <a href="#">
                  <img src="/img/knobs/Knob%20Red.png" width="15" height="15"/>
                  <img src="/img/os/free_bsd.png" width="15" height="15"/>
                  192.168.0.1
                </a>
              </li>
              <li>
                <a href="#">
                  <img src="/img/knobs/Knob%20Orange.png" width="15" height="15"/>
                  <img src="/img/os/windows.png" width="15" height="15"/>
                  192.168.0.1
                </a>
              </li>
              <li class="active">
                <a href="#">
                  <img src="/img/knobs/Knob%20Green.png" width="15" height="15"/>
                  <img src="/img/os/osx.png" width="15" height="15"/>
                  192.168.0.1
                </a>
              </li>
              <li class="nav-header">Unsubscribed</li>
              <li>
                <a href="#">
                  <img src="/img/knobs/Knob%20Green.png" width="15" height="15"/>
                  <img src="/img/os/linux.png" width="15" height="15"/>
                  192.168.0.1
                </a>
              </li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          <ul class="nav nav-tabs" id="serverTab">
            <li class="active"><a href="#metrics">Metrics</a></li>
            <li><a href="#processes">Processes</a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane active" id="metrics">
              <div class="container-fluid">
                <div class="row-fluid">
                  <div class="span3">
                    <h4>CPU</h4>
                    <span id="cpu_percentages"/>
                    <span id="cpu_timers"/>
                  </div>
                  <div class="span5">
                    <h4>MEMORY</h4>
                    <span id="memory_stats"/>
                  </div>
                  <div class="span2">
                    <h4>DISKS</h4>
                    <span id="io_stats"/>
                  </div>
                  <div class="span2">
                    <h4>NETWORK</h4>
                    <span id="network_stats"/>
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="processes">...2</div>
          </div>
        </div><!--/span-->
      </div><!--/row-->
    </div><!--/row-->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/js/bootstrap/jquery.js"></script>
    <script src="/js/underscore.js"></script>
    <script src="/js/bootstrap/bootstrap.js"></script>
    <script src="/js/d3.v2.js"></script>
    <script src="/event/emitter.js"></script>

    <!-- Visualization base components -->
    <script src="/visualizations/donut_base.js?<%= new Date().getTime() %>"></script>
    <script src="/components/bar_chart.js?<%= new Date().getTime() %>"></script>
    <!-- Visualization components -->
