    <script src="/components/cpu_barchart.js?<%= new Date().getTime() %>"></script>
    <script src="/components/cpu_times_barchart.js?<%= new Date().getTime() %>"></script>
    <!-- io statistics components -->
    <script src="/components/iostat_donut.js?<%= new Date().getTime() %>"></script>
    <script src="/components/disk_io_stats.js?<%= new Date().getTime() %>"></script>
    <!-- network statistics components -->
    <script src="/components/networkstat_donut.js?<%= new Date().getTime() %>"></script>
    <script src="/components/network_io_stats.js?<%= new Date().getTime() %>"></script>
    <!-- memory statistics component -->
    <script src="/components/memory_stats_component.js?<%= new Date().getTime() %>"></script>
    <!-- Must be loaded after emitter -->
    <script src="/connection/connection_handler.js?<%= new Date().getTime() %>"></script>
    <!-- Must be loaded after emitter -->
    <script src="/application.js?<%= new Date().getTime() %>"></script>
  </body>
